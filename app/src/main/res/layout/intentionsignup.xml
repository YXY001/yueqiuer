<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_border"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:divider="@drawable/linaerlayout_border"
    android:showDividers="middle"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/LLayout_intensionMysignup_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TView_signupName"
            android:text="@string/releaseName"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/TView_signupName1"
            android:layout_toRightOf="@+id/TView_signupName"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TView_signupTime"
            android:text="@string/releasTime"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />
        <TextView
            android:id="@+id/TView_signupTime1"
            android:layout_toRightOf="@+id/TView_signupTime"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLayout_intensionMysignup_second"
        android:layout_below="@id/LLayout_intensionMysignup_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TView_signupPosition"
            android:text="@string/releasePosition"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TView_signupPosition1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/TView_signupPosition"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <TextView
            android:id="@+id/TView_signupPersonNum1"
            android:layout_width="wrap_content"
            android:text="1"
           android:textColor="@color/orange"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TView_signupPersonNum"
            android:text="@string/releaseNum"
            android:textSize="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TView_signupState"
            android:text="已结束"
            android:background="@color/blue"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
