<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/layout_border"
    android:divider="@drawable/linaerlayout_border"
    android:showDividers="middle|end"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/LLayout_intensionRelease_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TView_releaseName"
            android:text="@string/releaseName"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/TView_releaseName1"
            android:layout_marginLeft="10dp"
            android:text="ssadsasdas"
            android:layout_toRightOf="@id/TView_releaseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TView_releaseTime"
            android:text="@string/releasTime"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/TView_releaseTime1"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/TView_releaseTime"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/LLayout_intensionRelease_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TView_releasePosition"
            android:text="@string/releasePosition"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <TextView
            android:id="@+id/TView_releasePosition1"
            android:text="石家庄"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/TView_releasePosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TView_releasePersonNum1"
            android:layout_width="wrap_content"
            android:text="1"
            android:textColor="@color/orange"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/TView_releasePersonNum"
            android:text="@string/releaseNum"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/TView_releasePersonNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
